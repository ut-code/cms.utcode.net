{
  "name": "cms.utcode.net",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "db": "bun drizzle-kit",
    "up": "devenv processes up -d && sleep 2 && sops exec-env secrets.dev.yaml 'bun db push --force'",
    "down": "devenv processes down",
    "reload": "bun down && bun up",
    "attach": "devenv processes up",
    "logs": "tail -f ./.devenv/processes.log",
    "check": "bun type-check && bun test-check && bun lint-check && bun format-check",
    "fix": "biome check --fix && prettier --write .",
    "tidy": "bun type-check && bun test-check && biome check --fix && prettier --write .",
    "test-check": "bun test",
    "type-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "format": "biome format --write . && prettier --write .",
    "format-check": "biome format . && prettier --check .",
    "lint-check": "biome lint .",
    "lint": "bun lint-check",
    "lint-fix": "biome lint --fix .",
    "prepare": "svelte-kit sync"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.2",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "@types/marked": "^6.0.0",
    "@types/node": "^25.0.3",
    "daisyui": "^5.5.14",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.7",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.46.1",
    "svelte-check": "^4.3.5",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3",
    "vite": "7.2.6",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "better-auth": "^1.4.9",
    "bits-ui": "^2.14.4",
    "chart.js": "^4.5.1",
    "drizzle-valibot": "^0.4.2",
    "isomorphic-dompurify": "^2.34.0",
    "lucide-svelte": "^0.562.0",
    "marked": "^17.0.1",
    "minio": "^8.0.6",
    "sharp": "^0.34.5",
    "valibot": "^1.2.0"
  }
}
