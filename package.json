{
  "name": "cms.utcode.net",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "sops exec-env secrets.dev.yaml 'vite dev'",
    "build": "vite build",
    "build:local": "sops exec-env secrets.prod.yaml 'vite build'",
    "preview": "vite preview",
    "prepare": "svelte-kit sync",
    "test-check": "bun test",
    "check": "bun type-check && bun test-check && bun lint-check && bun format-check",
    "fix": "bun lint-fix && bun format",
    "tidy": "bun type-check && bun test-check && bun --bun lint-fix --quiet && bun --bun format --log-level silent",
    "type-check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "format-check": "prettier --check .",
    "lint-check": "eslint .",
    "lint": "bun lint-check",
    "lint-fix": "eslint . --fix",
    "db": "drizzle-kit",
    "up": "bun db push --force && devenv processes up -d",
    "down": "devenv processes down",
    "reload": "bun down && bun up",
    "attach": "devenv processes up",
    "logs": "tail -f ./.devenv/processes.log"
  },
  "devDependencies": {
    "@eslint/compat": "^1.4.0",
    "@eslint/js": "^9.39.1",
    "@sveltejs/adapter-node": "^5.4.0",
    "@sveltejs/kit": "^2.49.1",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.17",
    "@types/marked": "^6.0.0",
    "@types/node": "^22",
    "daisyui": "^5.5.13",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.13.1",
    "globals": "^16.5.0",
    "postgres": "^3.4.5",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "svelte": "^5.45.6",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6",
    "yaml": "^2.8.2"
  },
  "dependencies": {
    "better-auth": "^1.4.6",
    "drizzle-valibot": "^0.4.2",
    "isomorphic-dompurify": "^2.34.0",
    "lucide-svelte": "^0.561.0",
    "marked": "^17.0.1",
    "minio": "^8.0.6",
    "valibot": "^1.2.0"
  }
}
